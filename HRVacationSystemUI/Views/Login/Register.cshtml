@model HRVacationSystemUI.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutSpicy.cshtml";
    // Layout = "~/Views/Shared/_LayoutElement.cshtml";

}


<div class="row">
    <div class="col-md-6">
        <div class="text-bg">
            <h1>Human Group</h1>
            <p>Just a few steps left to join us.</p>
        </div>
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @class = "main_form" }))
        {
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <h3><font color="White"> Register </font></h3>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Name, new { @class = "contactus", placeholder = "Name" })
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Surname, new { @class = "contactus", placeholder = "Surname" })
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Email, new { @class = "contactus", placeholder = "Email" })
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Password, new { @class = "contactus", placeholder = "Password", @type = "password" })
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "contactus", placeholder = "Confirm Password", @type = "password" })
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.BirthDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "contactus" })
                @Html.DropDownListFor(x => x.GenderPage, (List<SelectListItem>)ViewBag.Genders, new { @class = "contactus" })
            </div>
            <div class="col-sm-12">
                <button class="send_btn">Register</button>
            </div>
        }
    </div>
</div>